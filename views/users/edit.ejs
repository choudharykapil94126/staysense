<%- include('../partials/header.ejs') %>

   <div class="row">
    <div class="col-3 m-auto my-5">
       EDIT A USER
        <form class="my-3 needs-validation"  action="/users/<%= user._id %>?_method=PATCH" method="post" novalidate>
            <div class="form-floating mb-3">
                <input value="<%= user.name %>" name="user[name]" type="text" class="form-control" id="name" placeholder="User Name" required> 
                <label for="name">User's Full Name</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a your name.
                </div>
            </div>
            <div class="form-floating mb-3">
              <input value="<%= user.image %>" name="user[image]" type="text" class="form-control" id="address" placeholder="Enter Image URL" required> 
                <label for="address">User Image</label>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a your image address.
                </div>
            </div>
            <div class="form-floating mb-3">
                <input value="<%= user.username %>" name="user[username]" type="text" class="form-control" id="address" placeholder="Enter User Name" required disabled> 
                  <label for="address">Username</label>
                  <div class="valid-feedback">
                      Looks good!
                  </div>
                  <div class="invalid-feedback">
                      Please enter a your username
                  </div>
              </div>
            <button type="submit" class="btn btn-primary my-3" >Edit</button>
        </div>
          </form>
    </div>
   </div>
   <script src="/scripts/form-validation.js"></script>

<%- include('../partials/footer.ejs') %>
